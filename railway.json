{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfile": "Dockerfile.railway"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "sh -c 'python -m uvicorn main_v4:app --host 0.0.0.0 --port ${PORT:-8000}'",
    "restartPolicyMaxRetries": 5
  }
}
