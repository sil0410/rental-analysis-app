FROM python:3.11-slim

WORKDIR /app

# 安裝依賴
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 複製應用文件
COPY main_v4.py .
COPY index_v6.html .

# 創建必要的目錄
RUN mkdir -p /app/data /app/upload

# 設置環境變量
ENV PYTHONUNBUFFERED=1
ENV DB_PATH=/app/data/rental.db

# 暴露端口
EXPOSE 8000

# 啟動應用
CMD ["python", "-m", "uvicorn", "main_v4:app", "--host", "0.0.0.0", "--port", "8000"]
